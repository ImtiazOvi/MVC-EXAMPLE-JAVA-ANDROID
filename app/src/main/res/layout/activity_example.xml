<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example.view.ExampleActivity">

    <TextView
        android:id="@+id/txt_example_number_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="#000000"
        android:text="@string/txt_example_no"
        app:layout_constraintEnd_toStartOf="@+id/txt_example_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_example_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="none"
        android:textStyle="italic"
        android:textSize="22sp"
        android:textColor="#F39E9E"
        app:layout_constraintBottom_toBottomOf="@+id/txt_example_number_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_example_number_title"
        app:layout_constraintTop_toTopOf="@+id/txt_example_number_title" />

    <TextView
        android:id="@+id/txt_example_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="#000000"
        android:text="@string/txt_example_name"
        app:layout_constraintEnd_toStartOf="@+id/txt_example_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_example_number_title" />

    <TextView
        android:id="@+id/txt_example_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="none"
        android:textStyle="italic"
        android:textSize="22sp"
        android:textColor="#F39E9E"
        app:layout_constraintBottom_toBottomOf="@+id/txt_example_name_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_example_name_title"
        app:layout_constraintTop_toTopOf="@+id/txt_example_name_title" />
</androidx.constraintlayout.widget.ConstraintLayout>